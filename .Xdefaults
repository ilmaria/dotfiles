! General urxvt settings
URxvt.scrollBar:            false
URxvt.scrollBar_right:      false
URxvt.transparent:          false
URxvt.font:                 xft:Roboto Mono
URxvt.iso14755:             false
URxvt.perl-ext-common:      default,matcher,clipboard
URxvt.url-launcher:         chromium
URxvt.matcher.button:       1
URxvt.cursorBlink:          1
URxvt.internalBorder:       30
URxvt.geometry:             100x34
URxvt.saveLines:            9999 

! Copy paste settings
URxvt.clipboard.autocopy:   true
URxvt.keysym.M-c:           perl:clipboard:copy
URxvt.keysym.M-v:           perl:clipboard:paste
URxvt.keysym.M-C-v:         perl:clipboard:paste_escaped

! Fix ctrl and arrow buttons
URxvt.keysym.Control-Up:    \033[1;5A
URxvt.keysym.Control-Down:  \033[1;5B
URxvt.keysym.Control-Left:  \033[1;5D
URxvt.keysym.Control-Right: \033[1;5C

! hard contrast: *background: #1d2021
*background: #282828
! soft contrast: *background: #32302f
*foreground: #ebdbb2
! Black + DarkGrey
*color0:  #282828
*color8:  #928374
! DarkRed + Red
*color1:  #cc241d
*color9:  #fb4934
! DarkGreen + Green
*color2:  #98971a
*color10: #b8bb26
! DarkYellow + Yellow
*color3:  #d79921
*color11: #fabd2f
! DarkBlue + Blue
*color4:  #458588
*color12: #83a598
! DarkMagenta + Magenta
*color5:  #b16286
*color13: #d3869b
! DarkCyan + Cyan
*color6:  #689d6a
*color14: #8ec07c
! LightGrey + White
*color7:  #a89984
*color15: #ebdbb2
